{
  "mcmc": {
    "steps": 7000000,
    "samples": 5000,
    "runs": 1,
    "initial_area_size": 4,
    "warmup": {
        "warmup_steps": 20000,
        "warmup_steps": 20
    },
    "sample_from_prior": false
  },
  "model": {
    "areas": [1,2,3],
    "inheritance": true,
    "prior": {
      "languages_per_area": {
        "type": "uniform_area",
        "min": 2,
	"max": 35
      },
      "geo": {
        "type": "uniform"
      },
      "weights": {
        "type": "uniform"
      },
      "universal": {
        "type": "dirichlet",
        "file": "priors/universal_70.json"
      },
      "contact": {
        "type": "uniform"
      },
      "inheritance": {
        "East Semitic": {
          "type": "dirichlet",
          "file": "priors/Semitic.json"
        },
        "Northwest Semitic": {
          "type": "dirichlet",
          "file": "priors/Semitic.json"
        },
        "Central Semitic": {
          "type": "dirichlet",
          "file": "priors/Semitic.json"
        }
      }
    }
  },
  "data":{
    "features": "Sfeatures/Sanea.csv",
    "feature_states": "Sfeatures/feature_states.csv"
  }
}
